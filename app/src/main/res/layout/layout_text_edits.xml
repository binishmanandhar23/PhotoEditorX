<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/colorChooserMainContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutSelectedColor"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/camera_edit_color_button"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutOuterColor"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_margin="6dp"
        android:elevation="4dp"
        android:background="@drawable/curve_circle"
        android:backgroundTint="@color/color_white"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/constraintLayoutSelectedColor"
        app:layout_constraintEnd_toEndOf="@id/constraintLayoutSelectedColor"
        app:layout_constraintTop_toTopOf="@id/constraintLayoutSelectedColor"
        app:layout_constraintBottom_toBottomOf="@id/constraintLayoutSelectedColor"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutInnerColor"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_margin="2dp"
            android:elevation="1dp"
            android:layout_centerInParent="true"
            android:background="@drawable/curve_circle"
            android:backgroundTint="@color/color_transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewStyleEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aa"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/camera_edit_color_button"
        android:padding="10dp"
        android:textColor="@color/color_white"
        android:lineHeight="10sp"
        android:textSize="16sp"
        android:textAlignment="center"
        android:visibility="gone"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>